<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComeBackActivity">

    <Button
        android:id="@+id/sendback"
        android:layout_width="129dp"
        android:layout_height="66dp"
        android:text="Send Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/backtv"
        app:layout_constraintStart_toStartOf="@+id/backtv"
        app:layout_constraintTop_toBottomOf="@+id/backtv"
        app:layout_constraintVertical_bias="0.498" />

    <EditText
        android:id="@+id/backtv"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>